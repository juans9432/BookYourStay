               style="-fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-color: #dcdde1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 4);">

        <columns>
            <TableColumn fx:id="id" text="ID" prefWidth="80"/>
