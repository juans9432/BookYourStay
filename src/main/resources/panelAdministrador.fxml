<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="30.0"
      style="-fx-padding: 30px;"
      fx:controller="co.edu.uniquindio.bookyourstay.controladores.PanelAdministradorControlador"
      prefHeight="600.0" prefWidth="800.0">

    <HBox alignment="CENTER" spacing="10.0">
        <ImageView fitWidth="50.0" preserveRatio="true">
            <!-- Asegúrate de que la ruta de la imagen sea correcta -->
            <Image url="@img/clinica.png"/>
        </ImageView>
        <Label text="Panel del Administrador">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>
    </HBox>

    <TabPane VBox.vgrow="ALWAYS">
        <tabs>
            <Tab text="Alojamientos" fx:id="tab1" closable="false" />
            <Tab text="Ofertas" fx:id="tab2" closable="false" />
            <Tab text="Alojamientos Populares" fx:id="tab3" closable="false" />
            <Tab text="Alojamientos Rentables" fx:id="tab4" closable="false" />
            <Tab text="Estadísticas" fx:id="tab5" closable="false" />
        </tabs>
    </TabPane>

</VBox>
