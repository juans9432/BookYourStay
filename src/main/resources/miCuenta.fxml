<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.bookyourstay.controladores.MiCuentaControlador"
      alignment="TOP_CENTER"
      spacing="25"
      prefWidth="600" prefHeight="650"
      style="-fx-background-color: linear-gradient(to bottom right, #f2f9fc, #dceef9); -fx-padding: 40; -fx-background-radius: 20;">

    <!-- Título -->
    <Label text="Mi cuenta"
           style="-fx-text-fill: #05445E; -fx-font-weight: bold;">
        <font>
            <Font size="28.0" />
        </font>
    </Label>

    <!-- Formulario de información -->
    <GridPane hgap="15" vgap="15"
              style="-fx-background-color: white; -fx-padding: 30; -fx-border-radius: 15; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" />
            <ColumnConstraints halignment="LEFT" />
        </columnConstraints>

        <Label text="Nombre:" style="-fx-text-fill: #333; -fx-font-size: 14px; -fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNombre" promptText="Tu nombre completo"
                   style="-fx-background-radius: 10; -fx-padding: 8;"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Cédula:" style="-fx-text-fill: #333; -fx-font-size: 14px; -fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCedula" promptText="Ej: 123456789"
                   style="-fx-background-radius: 10; -fx-padding: 8;"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Teléfono:" style="-fx-text-fill: #333; -fx-font-size: 14px; -fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTelefono" promptText="Ej: 3123456789"
                   style="-fx-background-radius: 10; -fx-padding: 8;"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Correo:" style="-fx-text-fill: #333; -fx-font-size: 14px; -fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCorreo" promptText="correo@ejemplo.com"
                   style="-fx-background-radius: 10; -fx-padding: 8;"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Botones -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Actualizar"
                onAction="#guardarCambios"
                prefWidth="160" prefHeight="40"
                style="-fx-background-color: #1E81B0; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 12;"/>

        <Button text="Cambiar contraseña"
                prefWidth="180" prefHeight="40"
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 12;"/>

        <Button text="Eliminar cuenta"
                prefWidth="160" prefHeight="40"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 12;"/>
    </HBox>

</VBox>

