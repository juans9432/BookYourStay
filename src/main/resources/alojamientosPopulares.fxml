<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.bookyourstay.controladores.GestionOfertasControlador"
      prefHeight="400.0" prefWidth="600.0">

    <Label text="Alojamientos Populares" textFill="#0f0f0f">
        <font>
            <Font size="20.0"/>
        </font>
    </Label>


    <TableView fx:id="tablaAlojamientosPopulares" VBox.vgrow="ALWAYS" >
        <columns>
            <TableColumn fx:id="id" text="Id" />
            <TableColumn fx:id="nombre" text="nombre" />
            <TableColumn fx:id="ciudad" text="ciudad"  />
            <TableColumn fx:id="descripcion" text="descripcion" />
            <TableColumn fx:id="precio" text="precio/noche" />
            <TableColumn fx:id="huespedes" text="numero de huespedes" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>
