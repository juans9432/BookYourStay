<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.bookyourstay.controladores.GestionAlojamientosControldor"
      spacing="15"
      style="-fx-padding: 20; -fx-background-color: #f5f5f5;">

    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 0 0 15 0;">
        <Button text="Nuevo Alojamiento"
                style="-fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white;"
                minWidth="150" minHeight="35"/>

        <Button text="Editar"
                style="-fx-font-weight: bold; -fx-background-color: #2196F3; -fx-text-fill: white;"
                minWidth="100" minHeight="35" disable="true"
                fx:id="btnEditar"/>

        <Button text="Eliminar"
                style="-fx-font-weight: bold; -fx-background-color: #f44336; -fx-text-fill: white;"
                minWidth="100" minHeight="35" disable="true"
                fx:id="btnEliminar"/>

        <Separator orientation="VERTICAL" valignment="CENTER" prefHeight="30"/>

        <TextField fx:id="txtBusquedaRapida" promptText="Buscar..."
                   style="-fx-prompt-text-fill: #999;"
                   minWidth="200" minHeight="35"/>

        <Button text="Buscar"
                style="-fx-font-weight: bold;"
                minWidth="80" minHeight="35"/>
    </HBox>

    <TableView fx:id="tablaAlojamientos" layoutX="430.0" layoutY="30.0"
               prefHeight="380.0" prefWidth="490.0">
        <columns>
            <TableColumn fx:id="colId" text="Id" prefWidth="${tablaAlojamientos.width*0.2}" />
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="${tablaAlojamientos.width*0.2}" />
            <TableColumn fx:id="colCiudad" text="Ciudad" prefWidth="${tablaAlojamientos.width*0.2}" />
            <TableColumn fx:id="colDescripcion" text="Descripcion" prefWidth="${tablaAlojamientos.width*0.2}" />
            <TableColumn fx:id="colpreioPorNoche" text="Precio" prefWidth="${tablaAlojamientos.width*0.2}" />
        </ columns >
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>


