<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.bookyourstay.controladores.GestionOfertasControlador"
            spacing="15"
            style="-fx-padding: 20; -fx-background-color: #f5f5f5;">

    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 0 0 15 0;">
        <Button text="Nueva oferta"
                style="-fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white;"
                minWidth="150" minHeight="35"/>

        <Button text="Editar"
                style="-fx-font-weight: bold; -fx-background-color: #2196F3; -fx-text-fill: white;"
                minWidth="100" minHeight="35" disable="true"
                fx:id="btnEditar"/>

        <Button text="Eliminar"
                style="-fx-font-weight: bold; -fx-background-color: #f44336; -fx-text-fill: white;"
                minWidth="100" minHeight="35" disable="true"
                fx:id="btnEliminar"/>

    </HBox>

    <TableView fx:id="tablaOfertas" layoutX="430.0" layoutY="30.0"
               prefHeight="380.0" prefWidth="490.0">
        <columns>
            <TableColumn fx:id="colId" text="Id" prefWidth="${tablaOfertas.width*0.2}" />
            <TableColumn fx:id="colAlojamiento" text="Alojamiento" prefWidth="${tablaOfertas.width*0.2}" />
            <TableColumn fx:id="colInicio" text="Inicio" prefWidth="${tablaOfertas.width*0.2}" />
            <TableColumn fx:id="colFin" text="Fin" prefWidth="${tablaOfertas.width*0.2}" />
            <TableColumn fx:id="colPorcentaje" text="Porcentaje" prefWidth="${tablaOfertas.width*0.2}" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>
