    <Label text="Revisa tu correo e ingresa el codigo que te enviamos">
        <font>
            <Font size="15.0" />
        </font>
    </Label>

    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
        <TextField fx:id="txtCodigo" minHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Button minHeight="30.0" prefHeight="30.0" prefWidth="148.0" text="Verificar" onAction="#verificar" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    </GridPane>



